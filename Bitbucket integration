# Download and run the SnowSQL installer
          - curl -O https://sfc-repo.snowflakecomputing.com/snowsql/bootstrap/latest/linux_x86_64/snowsql-linux_x86_64.zip
          - unzip snowsql-linux_x86_64.zip
          - ./snowsql-linux_x86_64/install

          # Add SnowSQL to PATH (if required)
          - export PATH=$PATH:/root/.snowsql

          # Verify SnowSQL installation
          - snowsql --version
