-- TABLES
SELECT GET_DDL('TABLE', 'MY_DATABASE.MY_SCHEMA.' || table_name) AS ddl
FROM information_schema.tables
WHERE table_schema = 'MY_SCHEMA';

-- VIEWS
SELECT GET_DDL('VIEW', 'MY_DATABASE.MY_SCHEMA.' || table_name) AS ddl
FROM information_schema.views
WHERE table_schema = 'MY_SCHEMA';

-- SEQUENCES
SELECT GET_DDL('SEQUENCE', 'MY_DATABASE.MY_SCHEMA.' || sequence_name) AS ddl
FROM information_schema.sequences
WHERE sequence_schema = 'MY_SCHEMA';

-- FUNCTIONS
SELECT GET_DDL('FUNCTION', 'MY_DATABASE.MY_SCHEMA.' || function_name || '(' || arguments || ')') AS ddl
FROM information_schema.functions
WHERE function_schema = 'MY_SCHEMA';

-- PROCEDURES
SELECT GET_DDL('PROCEDURE', 'MY_DATABASE.MY_SCHEMA.' || procedure_name || '(' || arguments || ')') AS ddl
FROM information_schema.procedures
WHERE procedure_schema = 'MY_SCHEMA';
