def remove_substrings(strings):
    # Sort strings by length in descending order
    strings.sort(key=len, reverse=True)
    
    # Initialize an empty list to store the result
    result = []
    
    # Iterate through the sorted list
    for s in strings:
        # Check if the string is a substring of any string in the result list
        if not any(s in res for res in result):
            # If not, add it to the result list
            result.append(s)
    
    return result

# Example usage
strings = [
    "apple",
    "app",
    "application",
    "banana",
    "ban",
    "band",
    "bandana"
]

filtered_strings = remove_substrings(strings)
print(filtered_strings)
