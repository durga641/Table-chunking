import openai

# Set your API key and endpoint
openai.api_key = 'your-api-key-here'
openai.api_base = 'https://your-endpoint-here.openai.azure.com/'  # Your Azure OpenAI endpoint

# Define the engine you want to use
engine = 'gpt-35-turbo'  # or any other model available in your Azure OpenAI setup

# Create a simple prompt
prompt = "What are the benefits of using Azure OpenAI Service?"

# Make a request to the OpenAI API
response = openai.Completion.create(
    engine=engine,
    prompt=prompt,
    max_tokens=100  # Adjust the max_tokens based on your needs
)

# Print the response
print(response.choices[0].text.strip())
